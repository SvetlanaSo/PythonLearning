from fractions import Fraction as F
from math import *

limit = int(input())
if limit % 2 != 0:
    numerator = limit // 2
    denominator = limit - numerator
    print(str(numerator) + '/' + str(denominator))
    
else:
    numerator, denominator = limit // 2, limit // 2
    while gcd(numerator, denominator) > 1:
        numerator -= 1
        denominator += 1
    print(str(numerator) + '/' + str(denominator))    